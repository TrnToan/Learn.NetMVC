@model IList<Club>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
    @foreach(var club in Model)
    {
        <div class="col">
            <div class="card shadow-sm">
                <svg class="bd-placeholder-img card-img-top" width="100%" height="225" role="img">
                    <image xlink:href="@club.Image" width="100%" height="100%" />
                </svg>
                <div class="card-body">
                    <p class="card-text">@club.Title</p>
                    <p class="card-text">@club.Description</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a type="btn btn-success" asp-controller="Club" asp-action="Detail" asp-route-id="@club.Id" type="button" class="btn btn-sm btn-outline-secondary">View></a>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                        </div>
                        <small class="text-body-secondary">@club.ClubCategory</small>
                    </div>
                </div>
            </div>
        </div>
    }   
</div>